<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartAppMovies.Views.DetailPage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                <Image Source="{Binding DetailMovie.Poster}" WidthRequest="150" HeightRequest="250"></Image>
                <StackLayout>
                    <Label Text="{Binding DetailMovie.Title}" HorizontalOptions="StartAndExpand" FontSize="Large"></Label>
                    <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                        <Label Text="{Binding DetailMovie.Genre}" HorizontalOptions="StartAndExpand" FontSize="Medium"></Label>
                        <Label Text="-" HorizontalOptions="StartAndExpand" FontSize="Medium"></Label>
                        <Label Text="{Binding DetailMovie.Year}" HorizontalOptions="StartAndExpand" FontSize="Medium"></Label>
                    </StackLayout>
                </StackLayout>

            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>